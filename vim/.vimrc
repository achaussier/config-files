set t_Co=256                   " Force colors usage
set background=dark            " Set colors for a dark background
set number                     " See line numbers
syntax on                      " Ename syntax colorize
set tabstop=4                  " Indent each four columns
set expandtab                  " Transform tabs to spaces
set shiftwidth=4               " Indent to four columns
set shiftround                 " Indent to the next tab mark
set showmode                   " Show current mode
set ruler                      " Show cursor
set backspace=indent,eol,start " intelligent backspace
